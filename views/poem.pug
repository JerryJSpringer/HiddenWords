extends layout

block layout-content
	// Page Header
	header.masthead
		.overlay
		.container
			.row
				.col-lg-auto.col-md-auto.mx-auto
					.post-heading
						h1 
							= post.title
						span.meta
							| Posted #{post.postDate} by 
							a(href="/user/" + post.authorId + "/" + post.author)
								= post.author
	// Post Content
	article
		.container
			.row
				.col-lg-8.col-md-10.mx-auto
					p
						= post.content
